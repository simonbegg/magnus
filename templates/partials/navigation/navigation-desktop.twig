<nav class="fixed z-50 w-full py-6 transition-transform duration-1000" aria-label="Global">
	<div class="content-wrapper">
		<div class="relative flex items-center justify-between w-full pl-8 transition-all duration-500 ease-in-out bg-white rounded-full drop-shadow-xl" x-data="{ activeDropdown: null }">
			<div class="flex items-center">
				<img class="block w-auto h-6" :src="logo" alt="Wazoku logo">
				<div class="flex ml-16 space-x-4">
					{% for item in menu_main.items %}
						{% if item.children %}
							<div class="relative" @click.away="activeDropdown = null">
								<button @click.stop="activeDropdown = (activeDropdown === '{{ item.title }}') ? null : '{{ item.title }}'" class="flex items-center p-3 text-base leading-6 transition-colors duration-300 rounded-full gap-x-1 xl:text-lg group font-special hover:cursor-pointer hover:bg-zinc-800 hover:text-white" :class="{ 'bg-zinc-800 text-white': activeDropdown === '{{ item.title }}' }" aria-expanded="false">
									{{ item.title }}
									<svg class="flex-none w-5 h-5 transition-transform duration-300" :class="{ 'rotate-180': activeDropdown === '{{ item.title }}' }" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
										<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd"/>
									</svg>
								</button>

								<div x-show="activeDropdown === '{{ item.title }}'" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-1" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 translate-y-1" class="absolute left-0 z-50 p-4 mt-6 bg-white shadow-lg rounded-2xl top-full w-max">
									{% for child in item.children %}
										<div class="">
											<div class="px-4 py-2 rounded-full hover:bg-zinc-800 group">
												<a class="" href="{{ child.link }}">
													<div class="flex items-center icon {{ child.class }} group-hover:text-white">
														<span class="ml-6 -mt-[2px] text-base">{{ child.title }}</span>
													</div>
													<p class="mt-1 text-sm text-gray-600 group-hover:text-white">{{ child.description }}</p>
												</a>
											</div>
											{% for grandchild in child.children %}
												<div class="relative p-2 mt-2 transition-colors duration-300 rounded-lg hover:bg-gray-50 w-fit">
													<a href="{{ grandchild.link }}" target="{{ grandchild.target }}">
														<div class="flex items-center icon {{ grandchild.class }}">
															<span class="ml-6 text-base font-special">{{ grandchild.title }}</span>
														</div>
														<p class="mt-1 text-sm text-gray-600">{{ grandchild.description }}</p>
													</a>
												</div>
											{% endfor %}
										</div>
									{% endfor %}
								</div>
							</div>
						{% else %}
							<div>
								<a href="{{ item.link }}" :class="navTextColor" class="flex items-center text-base leading-6 gap-x-1 xl:text-lg font-special hover:text-primary" aria-expanded="false">
									{{ item.title }}
								</a>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</nav>
